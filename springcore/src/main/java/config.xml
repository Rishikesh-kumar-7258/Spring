<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />

	<bean class="com.springcore.springcore.Student" name="student1">
		<property name="studentId">
			<value>1234</value>
		</property>

		<property name="studentName">
			<value>Rishikesh Kumar</value>
		</property>

		<property name="studentAddress">
			<value>Bihar</value>
		</property>
	</bean>

	<bean class="com.springcore.springcore.Student" name="student2">
		<property name="studentId" value="1239356" />

		<property name="studentName"
			value="Rishikesh Kumar(Prince Kumar)" />

		<property name="studentAddress" value="Bihar(Patna)" />
	</bean>


</beans>